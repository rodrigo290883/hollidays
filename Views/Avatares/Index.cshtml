    </div>
    <div class="col-sm-6 col-md-4">
        <img class="avatar" alt="hogram" src="images/hogram.png" />
    </div>
</div>

<div class="modal" id="avatarModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmacion Avatar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Seleccionaste este avatar, ¿Quieres asignarlo a tu cuenta?</p>
                <img id="avatar_preview" src="" />

            </div>
            <div class="modal-footer">
                <button id="b_asignar" type="button" class="btn btn-primary">Asignar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        var avatar = "";

        $(".avatar").click(function () {

            avatar = $(this).attr('alt');
            $("#avatar_preview").attr('src', "images/"+avatar + ".png");
            $("#avatarModal").modal('show');

        });

        $("#b_asignar").click(function () {

            url = "@Url.Content("~/Avatares/CambiaAvatar")";

            $.post(url, { "avatar":avatar }, function (data) {
                if (data != 1) {
                    swal("Ocurrio un Error", data, "error");
                }
                else {
                    document.location.href = "@Url.Content("~/Solicitante")";
                }
            });
        });

    });
</script>